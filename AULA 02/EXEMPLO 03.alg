algoritmo "Calculadora de Soma"

var x: inteiro
    y: inteiro
    z: inteiro

inicio

    escreval("Digite o primeiro número")
    leia(x)
    escreval("Digite o segundo número")
    leia(y)
    escreva("A soma entre ")
    escreva(x)
    escreva(" e ")
    escreva(y)
    escreva(" é igual a ")
    escreva(x + y)
    
fimalgoritmo